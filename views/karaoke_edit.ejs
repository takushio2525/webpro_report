<!Doctype html>
<html lang="ja">

<head>
    <meta charset="utf-8">
    <title>
        <%= data.title %>の編集
    </title>
    <link rel="stylesheet" href="/public/karaoke_style.css">
</head>

<body>
    <h2>
        <%= data.title %>の編集
    </h2>
    <form action="/karaoke/update/<%= id %>" method="POST">
        <table>
            <tr>
                <th>項目</th>
                <th>データ</th>
            </tr>
            <tr>
                <td>曲名</td>
                <td><input type="text" name="title" value="<%= data.title %>" required></td>
            </tr>
            <tr>
                <td>アーティスト</td>
                <td><input type="text" name="artist" value="<%= data.artist %>" required></td>
            </tr>
            <tr>
                <td>ジャンル</td>
                <td>
                    <select name="genre">
                        <option value="J-POP" <%=data.genre==='J-POP' ? 'selected' : '' %>>J-POP</option>
                        <option value="アニソン" <%=data.genre==='アニソン' ? 'selected' : '' %>>アニソン</option>
                        <option value="洋楽" <%=data.genre==='洋楽' ? 'selected' : '' %>>洋楽</option>
                        <option value="演歌" <%=data.genre==='演歌' ? 'selected' : '' %>>演歌</option>
                        <option value="ボカロ" <%=data.genre==='ボカロ' ? 'selected' : '' %>>ボカロ</option>
                    </select>
                </td>
            </tr>
            <tr>
                <td>キー</td>
                <td><input type="number" name="key" value="<%= data.key %>" min="-7" max="7" required></td>
            </tr>
            <tr>
                <td>メモ</td>
                <td><input type="text" name="memo" value="<%= data.memo %>"></td>
            </tr>
            <tr>
                <td>最高得点</td>
                <td><input type="number" name="max_score" value="<%= data.max_score %>" min="0" max="100" step="0.001">
                </td>
            </tr>
        </table>
        <br>
        <input type="submit" value="更新">
    </form>
    <a href="/karaoke">一覧に戻る</a>
</body>

</html>